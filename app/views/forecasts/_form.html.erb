<%= simple_form_for(@forecast) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :date %>
    <%= f.input :temp_day %>
    <%= f.input :temp_night %>
    <%= f.input :descr_day %>
    <%= f.input :descr_night %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
